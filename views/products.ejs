                            <div class="productos__price"><%= data.price %> €</div>
                            <img src="/uploads/<%= data.img %>" class="productos__img" alt="...">
                        </div>
                        <div class="card-body">
                            <p class="card-text productos__descripcion"><%= data.name_product %></p>
                        </div>
                    </div>
                </a>
                <div class="productos__acciones">
                    <a class="btn btn-danger" href="/products/delete/<%= data.id_product %>">Eliminar</a>
                    <a class="btn btn-primary" href="/products/edit/<%= data.id_product %>">Editar</a>

                </div>
            </div>

            <% });} else {  %>
            <div class="container-fluid productos">
                <div class="container__centrado">
                    <h3 class="productos__error">No se han encontrado artículos para la sección <%=category %> </h3>
                </div>
            </div>

            <% } %>
        </div>
