<!-- lista de productos -->
<div class="container-fluid productos">
    <div class="container__centrado">
        <h2 class="productos__titulo mayusculas">
            <%if (category) { %>
            <%= category %>
            <% } else { %>
            Artículos
            <% } %>
        </h2>


        <div class="row productos__row">




            <!-- mis articulos -->
            <!-- si existen datos en data al hacer la select me los pinta -->

            <%if (data.length > 0) { data.forEach (data => { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 productos__col">
                <a class="productos__card-link" href="/products/view/<%= data.id_product %>">
                    <div class="card productos__card">
                        <div class="card-img-top">
